<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Karatombola.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Karatombola.Pages">
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:RulesPage}"
        Route="RulesPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:StartPage}"
        Route="StartPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:SongListPage}"
        Route="SongListPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:PlayPage}"
        Route="PlayPage"/>
</Shell>
